{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mohit Jain's Globe",
  "version": "0.5.0",
  "identifier": "com.mohit-globe.dev",
  "build": {
    "frontendDist": "../dist-tauri",
    "devUrl": "http://localhost:5050",
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Mohit Jain's Globe",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/16x16.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
